# XION NFT Scripts - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit your .env file to version control!

# ============================================================================
# WALLET CONFIGURATION
# ============================================================================

# Your wallet's 24-word mnemonic phrase (required for all transactions)
# Generate a new wallet with: npm run create-wallet
MNEMONIC="your twelve or twenty four word mnemonic phrase goes here in quotes"

# ============================================================================
# CONTRACT CONFIGURATION
# ============================================================================

# Your deployed NFT contract address (get this after running deploy-contract.js)
CONTRACT_ADDRESS=xion1...

# NFT collection details (used when deploying contract)
NFT_NAME="My NFT Collection"
NFT_SYMBOL="MNFT"
CONTRACT_LABEL="my-nft-contract"

# ============================================================================
# MINTING CONFIGURATION
# ============================================================================

# Token ID for minting (can also pass as command line argument)
# Uncomment and set if you want to use env vars instead of command line args
# TOKEN_ID=1

# Owner address for minted NFT (defaults to your wallet address if not set)
OWNER_ADDRESS=

# Token metadata
TOKEN_URI=ipfs://QmYourIPFSHashHere
TOKEN_NAME="NFT #1"
TOKEN_DESCRIPTION="An NFT from my collection"
TOKEN_IMAGE=ipfs://QmYourIPFSHashHere

# Metadata storage mode: "onchain" or "offchain" (default: onchain)
# - onchain: Store full metadata in smart contract (no IPFS required)
# - offchain: Store metadata on IPFS, contract stores only the reference
METADATA_STORAGE=onchain

# Additional metadata fields (for on-chain storage)
TOKEN_ATTRIBUTES='[{"trait_type":"Rarity","value":"Legendary"},{"trait_type":"Power","value":95}]'
TOKEN_ANIMATION_URL=
TOKEN_EXTERNAL_URL=
TOKEN_BACKGROUND_COLOR=

# ============================================================================
# TRANSFER CONFIGURATION
# ============================================================================

# Recipient address for transfers (can also pass as command line argument)
# Uncomment and set if you want to use env vars instead of command line args
# RECIPIENT=xion1...

# Amount for token transfers
# Must be in base units (uxion): 1000000 uxion = 1 XION
# Uncomment and set if you want to use env vars instead of command line args
# AMOUNT=1000000

# ============================================================================
# TRANSACTION MONITORING
# ============================================================================

# Transaction hash to monitor
TX_HASH=

# Wait for transaction to be indexed (true/false)
WAIT=false

# ============================================================================
# SIGNING CONFIGURATION
# ============================================================================

# Message to sign (for sign-message.js)
MESSAGE="Hello, XION blockchain!"

# Transaction type for sign-transaction.js and check-gas-fee.js
# (send-tokens, mint-nft, transfer-nft, mint, transfer-nft, instantiate)
# Uncomment and set if you want to use env vars instead of command line args
# TX_TYPE=send-tokens

# Output file for signed transaction
OUTPUT_FILE=signed-tx.json

# ============================================================================
# GAS FEE CHECKING
# ============================================================================

# Transaction type to check gas for (mint, transfer-nft, send-tokens, instantiate)
# TX_TYPE is already defined above, use the same variable

# ============================================================================
# NOTES
# ============================================================================

# 1. Always keep your MNEMONIC secure and never share it
# 2. Add .env to your .gitignore file
# 3. You can override these values with command line arguments in most scripts
# 4. Amounts for AMOUNT should be in XION (human-readable), not uxion
# 5. Get testnet tokens from Discord: https://discord.gg/burnt
#    Use command: /faucet [your-xion-address]
